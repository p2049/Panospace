rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Posts (Portfolio Images) - PUBLIC READ
    // Users upload their portfolio photos which should be publicly viewable
    match /posts/{userId}/{allPaths=**} {
      // Public read for portfolio images (posts are public content)
      allow read: if true;
      
      // Only authenticated users can upload to their own folder
      // Hard limit: 30MB (premium max). Client enforces tier limits (20MB free, 30MB premium)
      allow write: if request.auth != null && 
                     request.auth.uid == userId &&
                     request.resource.size < 30 * 1024 * 1024 &&  // 30MB hard limit
                     request.resource.contentType.matches('image/.*');
    }
    
    // Profile photos - PUBLIC READ
    match /profile_photos/{userId}/{allPaths=**} {
      // Public read for profile photos (avatars are public identity)
      allow read: if true;
      
      // Users can only upload their own profile photo
      // Validate file size (max 10MB) and type (images only)
      allow write: if request.auth != null && 
                     request.auth.uid == userId &&
                     request.resource.size < 10 * 1024 * 1024 &&  // 10MB limit (Increased from 5MB)
                     request.resource.contentType.matches('image/.*');
    }
    
    // Space Cards - PUBLIC READ
    match /spacecards/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && 
                     request.auth.uid == userId &&
                     request.resource.size < 10 * 1024 * 1024 &&
                     request.resource.contentType.matches('image/.*');
    }
    
    // Shop Items - PUBLIC READ
    match /shopItems/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && 
                     request.auth.uid == userId &&
                     request.resource.size < 10 * 1024 * 1024 &&
                     request.resource.contentType.matches('image/.*');
    }
    
    // Banners - PUBLIC READ
    match /banners/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && 
                     request.auth.uid == userId &&
                     request.resource.size < 10 * 1024 * 1024 &&
                     request.resource.contentType.matches('image/.*');
    }
    
    // Badges - PUBLIC READ
    match /badges/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && 
                     request.auth.uid == userId &&
                     request.resource.size < 5 * 1024 * 1024 &&
                     request.resource.contentType.matches('image/.*');
    }
    
    // Collections - PUBLIC READ
    match /collections/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && 
                     request.auth.uid == userId &&
                     request.resource.size < 10 * 1024 * 1024 &&
                     request.resource.contentType.matches('image/.*');
    }
    
    // Galleries (Studios) - PUBLIC READ
    // Added based on usage in studios.service.ts
    match /galleries/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && 
                     request.auth.uid == userId &&
                     request.resource.size < 10 * 1024 * 1024 &&
                     request.resource.contentType.matches('image/.*');
    }

    // Magazines - PUBLIC READ
    // Covers uploaded by Owner: magazines/{ownerId}/...
    match /magazines/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && 
                     request.auth.uid == userId &&
                     request.resource.size < 10 * 1024 * 1024 &&
                     request.resource.contentType.matches('image/.*');
    }

    // Magazine Issues - PUBLIC READ
    // Path: magazines/{magazineId}/issues/{userId}/...
    match /magazines/{magazineId}/issues/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && 
                     request.auth.uid == userId &&
                     request.resource.size < 10 * 1024 * 1024 &&
                     request.resource.contentType.matches('image/.*');
    }

    // Magazine Submissions - PUBLIC READ
    // Path: magazines/{magazineId}/submissions/{userId}/...
    // Allows any auth user to upload to their OWN submission folder within a magazine
    match /magazines/{magazineId}/submissions/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && 
                     request.auth.uid == userId &&
                     request.resource.size < 10 * 1024 * 1024 &&
                     request.resource.contentType.matches('image/.*');
    }
    
    // Museums - PUBLIC READ
    // Includes Covers: museums/{ownerId}/...
    match /museums/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && 
                     request.auth.uid == userId &&
                     request.resource.size < 10 * 1024 * 1024 &&
                     request.resource.contentType.matches('image/.*');
    }

    // Museum Exhibits - PUBLIC READ
    // Path: exhibits/{museumId}/{userId}/...
    // Enforces that the uploader puts their own UID in the path
    match /exhibits/{museumId}/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && 
                     request.auth.uid == userId &&
                     request.resource.size < 10 * 1024 * 1024 &&
                     request.resource.contentType.matches('image/.*');
    }
  }
}
