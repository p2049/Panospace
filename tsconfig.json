{
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "module": "ESNext",
        "skipLibCheck": true,
        /* Bundler mode */
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "allowJs": true,
        "noEmit": true,
        "jsx": "react-jsx",
        /* Linting */
        "strict": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUncheckedIndexedAccess": true,
        /* Path aliases */
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ],
            "@/components/*": [
                "src/components/*"
            ],
            "@/pages/*": [
                "src/pages/*"
            ],
            "@/hooks/*": [
                "src/hooks/*"
            ],
            "@/domain/*": [
                "src/domain/*"
            ],
            "@/utils/*": [
                "src/utils/*"
            ],
            "@/types": [
                "src/core/types/index.ts"
            ],
            "@/types/*": [
                "src/core/types/*"
            ],
            "@/constants/*": [
                "src/constants/*"
            ]
        }
    },
    "include": [
        "src"
    ],
    "exclude": [
        "src/test",
        "**/*.test.ts"
    ],
    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ]
}