rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && request.auth.token.admin == true;
    }

    // ============================================
    // USERS COLLECTION
    // ============================================
    match /users/{userId} {
      allow read: if true;
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && (request.auth.uid == userId || isAdmin());
      
      match /customFeeds/{feedId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      match /blockedUsers/{blockedUserId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      match /purchases/{purchaseId} {
        allow read: if true;
        allow write: if false; 
      }
      match /badges/{badgeId} {
        allow read: if true;
        allow write: if false; 
      }
      match /settings/{docId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // ============================================
    // POSTS & INTERACTIONS
    // ============================================
    match /posts/{postId} {
      allow read: if true;
      allow create: if request.auth != null && 
                     (request.resource.data.userId == request.auth.uid || 
                     request.resource.data.authorId == request.auth.uid);
      allow update, delete: if request.auth != null && 
                               (resource.data.userId == request.auth.uid || 
                                resource.data.authorId == request.auth.uid ||
                                isAdmin());

      match /comments/{commentId} {
        allow read: if true;
        allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
        allow update, delete: if request.auth != null && (resource.data.userId == request.auth.uid || isAdmin());
      }
    }

    match /likes/{likeId} {
      allow read: if true;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    match /follows/{followId} {
      allow read: if true;
      allow create: if request.auth != null && request.resource.data.followerId == request.auth.uid;
      allow delete: if request.auth != null && resource.data.followerId == request.auth.uid;
    }

    // ============================================
    // SHOP & COMMISSIONS
    // ============================================
    match /shopItems/{itemId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && (resource.data.userId == request.auth.uid || resource.data.authorId == request.auth.uid || isAdmin());
    }

    match /orders/{orderId} {
      allow read: if request.auth != null && (resource.data.userId == request.auth.uid || resource.data.buyerUid == request.auth.uid || resource.data.sellerId == request.auth.uid);
      allow write: if false; 
    }

    match /commissions/{commissionId} {
      allow read: if request.auth != null && (resource.data.buyerId == request.auth.uid || resource.data.editorId == request.auth.uid);
      allow create: if request.auth != null && request.resource.data.buyerId == request.auth.uid;
      allow update: if request.auth != null && (resource.data.buyerId == request.auth.uid || resource.data.editorId == request.auth.uid);
    }

    // ============================================
    // COLLECTIONS
    // ============================================
    match /collections/{collectionId} {
      allow read: if resource.data.visibility == 'public' || 
                    resource.data.visibility == 'unlisted' ||
                    (request.auth != null && (resource.data.ownerId == request.auth.uid || isAdmin()));
      allow create: if request.auth != null && request.resource.data.ownerId == request.auth.uid;
      allow update: if request.auth != null && (resource.data.ownerId == request.auth.uid || isAdmin());
      allow delete: if request.auth != null && (resource.data.ownerId == request.auth.uid || isAdmin());

      match /items/{itemId} {
        allow read: if get(/databases/$(database)/documents/collections/$(collectionId)).data.visibility == 'public' ||
                      get(/databases/$(database)/documents/collections/$(collectionId)).data.visibility == 'unlisted' ||
                      (request.auth != null && (get(/databases/$(database)/documents/collections/$(collectionId)).data.ownerId == request.auth.uid || isAdmin()));
        allow write: if request.auth != null && (get(/databases/$(database)/documents/collections/$(collectionId)).data.ownerId == request.auth.uid || isAdmin());
      }
    }

    // ============================================
    // STUDIOS (Shared Spaces)
    // ============================================
    match /studios/{studioId} {
      function isStudioMember() {
        return request.auth != null && exists(/databases/$(database)/documents/studios/$(studioId)/members/$(request.auth.uid));
      }
      function isStudioAdmin() {
        let role = get(/databases/$(database)/documents/studios/$(studioId)/members/$(request.auth.uid)).data.role;
        return request.auth != null && (role == 'admin' || role == 'owner');
      }

      allow read: if resource.data.visibility == 'public' || 
                    resource.data.visibility == 'unlisted' ||
                    isStudioMember() || isAdmin();
      allow create: if request.auth != null;
      allow update, delete: if isStudioAdmin() || isAdmin();

      match /members/{uid} {
        allow read: if true;
        allow write: if isStudioAdmin() || isAdmin();
        allow delete: if request.auth != null && (request.auth.uid == uid || isStudioAdmin());
      }

      match /items/{itemId} {
        allow read: if true; 
        allow write: if isStudioMember() || isAdmin();
      }
    }

    // ============================================
    // MUSEUMS
    // ============================================
    match /museums/{museumId} {
      allow read: if resource.data.visibility == 'public' || 
                    resource.data.visibility == 'unlisted' ||
                    (request.auth != null && (resource.data.ownerId == request.auth.uid || isAdmin()));
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && (resource.data.ownerId == request.auth.uid || isAdmin());

      match /sections/{sectionId} {
        allow read: if true;
        allow write: if request.auth != null && (get(/databases/$(database)/documents/museums/$(museumId)).data.ownerId == request.auth.uid || isAdmin());
      }
    }

    // ============================================
    // MAGAZINES
    // ============================================
    match /magazines/{magazineId} {
      function canWriteMagazine() {
        let mag = resource.data;
        return request.auth != null && (
          (mag.ownerType == 'user' && mag.ownerId == request.auth.uid) ||
          (mag.ownerType == 'studio' && exists(/databases/$(database)/documents/studios/$(mag.ownerId)/members/$(request.auth.uid)) )
        );
      }
      
      function canPublishMagazine() {
        let mag = resource.data;
        return request.auth != null && (
          (mag.ownerType == 'user' && mag.ownerId == request.auth.uid) ||
          (mag.ownerType == 'studio' && 
            (get(/databases/$(database)/documents/studios/$(mag.ownerId)/members/$(request.auth.uid)).data.role in ['admin', 'owner'])
          )
        );
      }

      allow read: if resource.data.visibility == 'public' || 
                    resource.data.visibility == 'unlisted' ||
                    (request.auth != null && (resource.data.ownerId == request.auth.uid || canWriteMagazine()));
      allow create: if request.auth != null;
      allow update: if canPublishMagazine() || isAdmin();
      allow delete: if canPublishMagazine() || isAdmin();

      match /pages/{pageId} {
        allow read: if true;
        allow write: if canWriteMagazine() || isAdmin();
      }
    }

    // ============================================
    // EVENTS & CONTESTS
    // ============================================
    match /events/{eventId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && (resource.data.creatorId == request.auth.uid || isAdmin());

      match /feedPosts/{postId} {
        allow read: if true;
        allow create: if request.auth != null;
        allow delete: if request.auth != null;
      }
    }

    match /events_global/{id} { allow read: if true; allow write: if false; }
    match /events_app/{id} { allow read: if true; allow write: if false; }

    match /contests/{contestId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && (resource.data.creatorUid == request.auth.uid || isAdmin());

      match /entries/{entryId} {
        allow read: if true;
        allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
        allow delete: if request.auth != null && resource.data.userId == request.auth.uid;
      }
    }

    // ============================================
    // SPACE CARDS
    // ============================================
    match /spaceCards/{cardId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update: if request.auth != null && (resource.data.creatorUid == request.auth.uid || isAdmin());
    }

    match /spaceCardOwnership/{id} {
      allow read: if true;
      allow create: if request.auth != null && request.resource.data.ownerId == request.auth.uid;
      allow update: if request.auth != null && (resource.data.ownerId == request.auth.uid || isAdmin());
    }

    match /user_spacecards/{docId} {
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }

    // ============================================
    // MONEY & INTEGRITY (SENSITIVE)
    // ============================================
    match /transactions/{docId} {
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update, delete: if false;
    }

    match /wallet/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if false; 
    }

    match /userIntegrity/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if false;
    }

    match /weeklyLikes/{docId} {
      allow read, write: if request.auth != null && docId.matches(request.auth.uid + '_.*');
    }

    // ============================================
    // NOTIFICATIONS & REPORTS
    // ============================================
    match /notifications/{notificationId} {
      allow read, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null; 
    }

    match /reports/{reportId} {
      allow create: if request.auth != null && request.resource.data.reportedBy == request.auth.uid;
      allow read, write: if isAdmin();
    }

    // ============================================
    // OTHER
    // ============================================
    match /soundtags/{id} {
      allow read: if true;
      allow create: if request.auth != null && request.resource.data.artistId == request.auth.uid;
      allow update, delete: if request.auth != null && (resource.data.artistId == request.auth.uid || isAdmin());
    }

    match /institutions/{id} { allow read: if true; allow write: if false; }
    match /panodex_entries/{id} { allow read: if true; allow write: if false; }
    match /monthlyWinners/{id} { allow read: if true; allow write: if false; }
  }
}
