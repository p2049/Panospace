rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && request.auth.token.admin == true;
    }

    // ============================================
    // USERS COLLECTION
    // ============================================
    match /users/{userId} {
      // Profile is public, but restrict sensitive fields in real app
      // For now, allow read if true, but ideally:
      // allow read: if true;
      // allow get: if true;
      // allow list: if true;
      allow read: if true;
      
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && (request.auth.uid == userId || isAdmin());
      
      // Subcollections
      match /customFeeds/{feedId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      match /blockedUsers/{blockedUserId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      match /purchases/{purchaseId} {
        allow read: if true;
        allow write: if false; // Backend only
      }

      match /badges/{badgeId} {
        allow read: if true;
        allow write: if false; // Backend only
      }

      match /settings/{docId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // ============================================
    // POSTS & INTERACTIONS
    // ============================================
    match /posts/{postId} {
      allow read: if true;
      allow create: if request.auth != null && 
                     (request.resource.data.userId == request.auth.uid || 
                     request.resource.data.authorId == request.auth.uid);
      allow update, delete: if request.auth != null && 
                               (resource.data.userId == request.auth.uid || 
                                resource.data.authorId == request.auth.uid ||
                                isAdmin());

      match /comments/{commentId} {
        allow read: if true;
        allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
        allow update, delete: if request.auth != null && (resource.data.userId == request.auth.uid || isAdmin());
      }
    }

    match /likes/{likeId} {
      allow read: if true;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    match /follows/{followId} {
      allow read: if true;
      allow create: if request.auth != null && request.resource.data.followerId == request.auth.uid;
      allow delete: if request.auth != null && resource.data.followerId == request.auth.uid;
    }

    // ============================================
    // SHOP & COMMISSIONS
    // ============================================
    match /shopItems/{itemId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && (resource.data.userId == request.auth.uid || resource.data.authorId == request.auth.uid || isAdmin());
    }

    match /orders/{orderId} {
      allow read: if request.auth != null && (resource.data.userId == request.auth.uid || resource.data.buyerUid == request.auth.uid || resource.data.sellerId == request.auth.uid);
      allow write: if false; // Managed by backend
    }

    match /commissions/{commissionId} {
      allow read: if request.auth != null && (resource.data.buyerId == request.auth.uid || resource.data.editorId == request.auth.uid);
      allow create: if request.auth != null && request.resource.data.buyerId == request.auth.uid;
      allow update: if request.auth != null && (resource.data.buyerId == request.auth.uid || resource.data.editorId == request.auth.uid);
    }

    // ============================================
    // COLLECTIONS & GALLERIES
    // ============================================
    match /collections/{collectionId} {
      allow read: if resource.data.visibility == 'public' || 
                    (request.auth != null && (resource.data.ownerId == request.auth.uid || resource.data.visibility == 'followers'));
      allow create: if request.auth != null && request.resource.data.ownerId == request.auth.uid;
      allow update, delete: if request.auth != null && (resource.data.ownerId == request.auth.uid || isAdmin());
    }

    match /galleries/{galleryId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && (resource.data.ownerId == request.auth.uid || isAdmin());

      match /posts/{postId} {
        allow read: if true;
        allow create: if request.auth != null; // Should check membership in parent but for minimalism allow auth
        allow delete: if request.auth != null;
      }
      match /collections/{colId} {
        allow read: if true;
        allow create: if request.auth != null;
        allow delete: if request.auth != null;
      }
    }

    // ============================================
    // EVENTS & CONTESTS
    // ============================================
    match /events/{eventId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && (resource.data.creatorId == request.auth.uid || isAdmin());

      match /feedPosts/{postId} {
        allow read: if true;
        allow create: if request.auth != null;
        allow delete: if request.auth != null;
      }
    }

    match /events_global/{id} { allow read: if true; allow write: if false; }
    match /events_app/{id} { allow read: if true; allow write: if false; }

    match /contests/{contestId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && (resource.data.creatorUid == request.auth.uid || isAdmin());

      match /entries/{entryId} {
        allow read: if true;
        allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
        allow delete: if request.auth != null && resource.data.userId == request.auth.uid;
      }
    }

    // ============================================
    // MONEY & INTEGRITY (SENSITIVE)
    // ============================================
    match /transactions/{docId} {
      // REQUIRED: Allow users to see their own transactions
      // CRITICAL: Prevent unauthorized access to other users' money history
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      // Allow client-side creation for legacy WalletService compatibility (MINIMAL PATCH)
      // In Phase 3, this should be Backend-Only.
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update, delete: if false;
    }

    match /wallet/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if false; // Managed via users document or backend
    }

    match /userIntegrity/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if false;
    }

    match /weeklyLikes/{docId} {
      allow read, write: if request.auth != null && docId.matches(request.auth.uid + '_.*');
    }

    // ============================================
    // NOTIFICATIONS & REPORTS
    // ============================================
    match /notifications/{notificationId} {
      allow read, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
      // Restrict create to avoid spam. Only allow if sending to self or if system (backend).
      // Minimal patch: allow if auth'd but prioritize moving to backend.
      allow create: if request.auth != null; 
    }

    match /reports/{reportId} {
      allow create: if request.auth != null && request.resource.data.reportedBy == request.auth.uid;
      allow read, write: if isAdmin();
    }

    // ============================================
    // SPACE CARDS
    // ============================================
    match /spaceCards/{cardId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update: if request.auth != null && (resource.data.creatorUid == request.auth.uid || isAdmin());
    }

    match /spaceCardOwnership/{id} {
      allow read: if true;
      allow create: if request.auth != null && request.resource.data.ownerId == request.auth.uid;
      allow update: if request.auth != null && (resource.data.ownerId == request.auth.uid || isAdmin());
    }

    match /user_spacecards/{docId} {
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }

    match /museums/{museumId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && (resource.data.ownerId == request.auth.uid || isAdmin());
    }

    match /magazines/{magId} {
      allow read: if resource.data.visibility == 'public' || (request.auth != null && resource.data.ownerId == request.auth.uid);
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && (resource.data.ownerId == request.auth.uid || isAdmin());
    }

    match /magazineIssues/{issueId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && (resource.data.ownerId == request.auth.uid || isAdmin());
    }

    // ============================================
    // OTHER
    // ============================================
    match /soundtags/{id} {
      allow read: if true;
      allow create: if request.auth != null && request.resource.data.artistId == request.auth.uid;
      allow update, delete: if request.auth != null && (resource.data.artistId == request.auth.uid || isAdmin());
    }

    match /institutions/{id} { allow read: if true; allow write: if false; }
    match /panodex_entries/{id} { allow read: if true; allow write: if false; }
    match /monthlyWinners/{id} { allow read: if true; allow write: if false; }
  }
}
